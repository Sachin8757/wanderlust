<% if(success&&success.length){ %>
    <div class="alert alert-success col-6 offset-3 offset-md-3 alert-dismissible fade show"><%=success%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div></div>
<%}%>
    
<% if(error&&error.length){%>
    <div class="alert alert-danger col-6 offset-3 alert-dismissible fade show"><%=error%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div></div>
<%}%>

    
